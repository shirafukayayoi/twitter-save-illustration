{
  "manifest_version": 3,
  "name": "Twitter illustration save in Google Drive",
  "version": "1.0.0",
  "description": "Twitterのイラストを特定のGoogleドライブに保存する拡張機能",
  "host_permissions": ["https://bookwalker.jp/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/home", "https://x.com/*/status/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
